<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:elevation="2dp"
    android:paddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recommendation_association_group"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_group_white_36dp"/>

        <TextView
            android:id="@+id/recommendation_association_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="社团推荐"
            android:textSize="17sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/recommendation_association_group"/>

        <ImageButton
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_action_ic_more_horiz_black_48dp"
            android:background="#00000000"/>

    </RelativeLayout>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/recommendation_association_card_one"
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginLeft="8dp"
                android:elevation="2dp"
                android:onClick="showAssociationDetails">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="2dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/img"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上海大学巴拉巴拉社团1"
                        android:textColor="@color/white"
                        android:lines="2"
                        android:padding="8dp"
                        android:textSize="17sp"
                        android:layout_gravity="center_horizontal|bottom" />

                </FrameLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/recommendation_association_card_two"
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginLeft="8dp"
                android:elevation="2dp"
                android:onClick="showAssociationDetails">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="2dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/img"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上海大学巴拉巴拉社团2"
                        android:textColor="@color/white"
                        android:lines="2"
                        android:textSize="17sp"
                        android:padding="8dp"
                        android:layout_gravity="center_horizontal|bottom" />

                </FrameLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/recommendation_association_card_three"
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginLeft="8dp"
                android:elevation="2dp"
                android:onClick="showAssociationDetails">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="2dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/img"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上海大学巴拉巴拉社团3"
                        android:textColor="@color/white"
                        android:lines="2"
                        android:textSize="17sp"
                        android:padding="8dp"
                        android:layout_gravity="center_horizontal|bottom" />

                </FrameLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/recommendation_association_card_four"
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginLeft="8dp"
                android:elevation="2dp"
                android:onClick="showAssociationDetails">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="2dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/img"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上海大学巴拉巴拉社团4"
                        android:textColor="@color/white"
                        android:lines="2"
                        android:textSize="17sp"
                        android:padding="8dp"
                        android:layout_gravity="center_horizontal|bottom" />

                </FrameLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/recommendation_association_card_five"
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginLeft="8dp"
                android:elevation="2dp"
                android:onClick="showAssociationDetails">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="2dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/img"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上海大学巴拉巴拉社团5"
                        android:textColor="@color/white"
                        android:lines="2"
                        android:textSize="17sp"
                        android:padding="8dp"
                        android:layout_gravity="center_horizontal|bottom" />

                </FrameLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>