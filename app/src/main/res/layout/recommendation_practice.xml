<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:elevation="2dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recommendation_association_group"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_action_ic_whatshot_red"/>

        <TextView
            android:id="@+id/recommendation_association_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热门活动"
            android:textSize="17sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/recommendation_association_group"/>

        <ImageButton
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_action_ic_more_horiz_black_48dp"
            android:background="#00000000"/>

    </RelativeLayout>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/recommendation_practice_card_one"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:elevation="2dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="4dp"
                android:layout_alignParentTop="true"
                android:id="@+id/recommendation_practice_card_one_logo"
                android:src="@drawable/app_logo"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:textSize="17sp"
                android:id="@+id/recommendation_practice_card_one_title"
                android:textAppearance="?attr/textAppearanceListItem"
                android:layout_toRightOf="@+id/recommendation_practice_card_one_logo" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:id="@+id/recommendation_practice_card_one_line"
                android:layout_margin="4dp"
                android:layout_below="@id/recommendation_practice_card_one_logo"
                android:background="#9E9E9E" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginLeft="80dp"
                android:layout_below="@id/recommendation_practice_card_one_line">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_action_ic_accessibility_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3459100"
                    android:textSize="21sp"
                    android:layout_gravity="center_vertical"
                    android:textAppearance="?attr/textAppearanceListItem"/>

            </LinearLayout>

        </RelativeLayout>

        </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/recommendation_practice_card_two"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:elevation="2dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="4dp"
                android:layout_alignParentTop="true"
                android:id="@+id/recommendation_practice_card_two_logo"
                android:src="@drawable/app_logo"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:textSize="17sp"
                android:id="@+id/recommendation_practice_card_two_title"
                android:textAppearance="?attr/textAppearanceListItem"
                android:layout_toRightOf="@+id/recommendation_practice_card_two_logo"
                android:layout_toEndOf="@+id/recommendation_practice_card_two_logo" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:id="@+id/recommendation_practice_card_two_line"
                android:layout_margin="4dp"
                android:layout_below="@id/recommendation_practice_card_two_logo"
                android:background="#9E9E9E" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginLeft="80dp"
                android:layout_below="@id/recommendation_practice_card_two_line">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_action_ic_accessibility_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3459100"
                    android:textSize="21sp"
                    android:layout_gravity="center_vertical"
                    android:textAppearance="?attr/textAppearanceListItem"/>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/recommendation_practice_card_three"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:elevation="2dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="4dp"
                android:layout_alignParentTop="true"
                android:id="@+id/recommendation_practice_card_three_logo"
                android:src="@drawable/app_logo"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:textSize="17sp"
                android:id="@+id/recommendation_practice_card_three_title"
                android:textAppearance="?attr/textAppearanceListItem"
                android:layout_toRightOf="@+id/recommendation_practice_card_three_logo"
                android:layout_toEndOf="@+id/recommendation_practice_card_three_logo" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:id="@+id/recommendation_practice_card_three_line"
                android:layout_margin="4dp"
                android:layout_below="@id/recommendation_practice_card_three_logo"
                android:background="#9E9E9E" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginLeft="80dp"
                android:layout_below="@id/recommendation_practice_card_three_line">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_action_ic_accessibility_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3459100"
                    android:textSize="21sp"
                    android:layout_gravity="center_vertical"
                    android:textAppearance="?attr/textAppearanceListItem"/>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>